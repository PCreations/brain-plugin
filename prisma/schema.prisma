generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Flashcard {
  id             String    @id
  front          String
  back           String
  Partition      Partition @relation(fields: [partitionId], references: [id])
  partitionId    String
  lastReviewedAt DateTime?
}

model Partition {
  id              String      @id
  partitionNumber Int
  flashcards      Flashcard[]
  box             Box         @relation(fields: [boxId], references: [id], onDelete: Cascade)
  boxId           String
}

model Box {
  id        String      @id
  Partition Partition[]
}
