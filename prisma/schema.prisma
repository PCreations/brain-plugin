generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Flashcard {
  id          String    @id
  front       String
  back        String
  Partition   Partition @relation(fields: [partitionId], references: [id])
  partitionId String
}

model Partition {
  id         String      @id
  flashcards Flashcard[]
  box        Box         @relation(fields: [boxId], references: [id])
  boxId      String
}

model Box {
  id        String      @id
  Partition Partition[]
}
