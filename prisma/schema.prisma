generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Flashcard {
  id                  String     @id
  front               String
  back                String
  Partition           Partition  @relation(fields: [partitionId], references: [id])
  partitionId         String
  lastReviewedAt      DateTime?
  flashcard1          Flashcard? @relation("Flashcard1", fields: [flashcard1Id], references: [id])
  flashcard1Id        String?    @unique
  connectedFlashcard1 Flashcard? @relation("Flashcard1")
  flashcard2          Flashcard? @relation("Flashcard2", fields: [flashcard2Id], references: [id])
  flashcard2Id        String?    @unique
  connectedFlashcard2 Flashcard? @relation("Flashcard2")
}

model Partition {
  id              String      @id
  partitionNumber Int
  flashcards      Flashcard[]
  box             Box         @relation(fields: [boxId], references: [id], onDelete: Cascade)
  boxId           String
}

model Box {
  id        String      @id
  userId    String
  Partition Partition[]
}
